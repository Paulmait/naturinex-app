# Naturinex Medical Wellness App - Environment Configuration
# Copy this file to .env.local and fill in your actual values
# NEVER commit actual keys to version control

# ==============================================================================
# SUPABASE CONFIGURATION (Primary Backend)
# ==============================================================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ==============================================================================
# AI SERVICES
# ==============================================================================
# Google Gemini API (Primary AI Service)
GEMINI_API_KEY=your_gemini_api_key_here
EXPO_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Google Vision API (OCR Service)
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
EXPO_PUBLIC_GOOGLE_VISION_API_KEY=your_google_vision_api_key_here

# OpenAI API (Backup - Optional)
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================================================
# Stripe Publishable Key (Safe to expose in client)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Secret Key (NEVER expose - server-side only)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Secret (For webhook signature verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==============================================================================
# FIREBASE CONFIGURATION (Legacy - Optional)
# ==============================================================================
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-app.firebasestorage.app
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================
# JWT Secret for session management
JWT_SECRET=your_secure_random_jwt_secret_here

# Session Secret
SESSION_SECRET=your_secure_random_session_secret_here

# Encryption Key (256-bit hex string)
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# ==============================================================================
# MONITORING & ERROR TRACKING
# ==============================================================================
# Sentry DSN (Error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Environment
NODE_ENV=production

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
EXPO_PUBLIC_ENABLE_OCR=true
EXPO_PUBLIC_ENABLE_CAMERA=true
EXPO_PUBLIC_ENABLE_2FA=true
EXPO_PUBLIC_ENABLE_BIOMETRIC=true

# ==============================================================================
# API ENDPOINTS
# ==============================================================================
EXPO_PUBLIC_API_URL=https://your-api.com