# Naturinex Web App Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Configuration
REACT_APP_API_URL=https://your-backend.vercel.app

# Stripe Configuration (Public key - safe to expose but should be environment-specific)
REACT_APP_STRIPE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# Firebase Configuration (Get from Firebase Console)
# IMPORTANT: Use environment variables for these in production
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-app.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Feature Flags
REACT_APP_ENABLE_OCR=true
REACT_APP_ENABLE_CAMERA=true