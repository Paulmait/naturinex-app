# Supabase CLI Configuration
# https://supabase.com/docs/guides/cli/config

# Project metadata
project_id = "hxhbsxzkzarqwksbjpce"

# API settings
[api]
enabled = true
port = 54321
schemas = ["public", "storage", "graphql_public"]
extra_search_path = ["public"]
max_rows = 1000

# Database settings
[db]
port = 54322
shadow_port = 54320
major_version = 15

# Studio settings (Supabase Dashboard)
[studio]
enabled = true
port = 54323
api_url = "http://localhost"

# Inbucket (local email testing)
[inbucket]
enabled = true
port = 54324
smtp_port = 54325
pop3_port = 54326

# Storage settings
[storage]
enabled = true
file_size_limit = "50MiB"

# Auth settings
[auth]
enabled = true
enable_signup = true
enable_anonymous_sign_ins = false
site_url = "http://localhost:3000"
additional_redirect_urls = []
jwt_expiry = 3600
external_email_enabled = true
external_phone_enabled = false

# Auth providers
[auth.email]
enable_signup = true
double_confirm_changes = true
enable_confirmations = false

# Edge Functions settings
[functions]
enabled = true

# Edge Function configurations
[functions.gemini-analyze]
verify_jwt = true

[functions.vision-ocr]
verify_jwt = true

[functions.analyze]
verify_jwt = true

[functions.analyze-production]
verify_jwt = true

[functions.stripe-webhook]
verify_jwt = false  # Stripe webhook needs to bypass JWT

# Analytics
[analytics]
enabled = false
